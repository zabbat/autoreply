<net.wandroid.answer.AnimatorRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddActivity$DummySectionFragment" >

    <LinearLayout
        android:id="@+id/add_contact_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/add_paddng" >

        <TextView
            android:id="@+id/add_contact_number_text"
            style="@android:style/TextAppearance.Holo.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/add_paddng"
            android:text="@string/add_contact_number_txt" />

        <EditText
            android:id="@+id/add_message_reply_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_drop_down_height"
            android:layout_marginBottom="@dimen/add_drop_down_margin"
            android:hint="@string/add_contact_number_hint_txt"
            android:inputType="phone"
            android:paddingBottom="@dimen/add_paddng"
            android:paddingTop="@dimen/add_paddng" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/controll_view"
            android:padding="@dimen/add_paddng" />

        <TextView
            android:id="@+id/add_contact_error_text"
            style="@style/ErrorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/add_paddng"
            android:textColor="@color/error_text_color"
            android:visibility="invisible"
            />
    </LinearLayout>

</net.wandroid.answer.AnimatorRelativeLayout><!-- From: file:/home/jjungb/AndroidstudioProjects/answer/app/src/main/res/layout/add_contact_view.xml -->