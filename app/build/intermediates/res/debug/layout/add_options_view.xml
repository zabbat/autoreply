<?xml version="1.0" encoding="utf-8"?>
<net.wandroid.answer.AnimatorRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/add_paddng" >

        <TextView
            style="@android:style/TextAppearance.Holo.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/add_paddng"
            android:text="@string/add_options_duration_txt" />

        <EditText
            android:id="@+id/add_option_duration_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_drop_down_height"
            android:layout_marginBottom="@dimen/add_drop_down_margin"
            android:hint="@string/add_options_duration_hint_txt"
            android:inputType="number"
            android:padding="@dimen/add_paddng" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/controll_view"
            android:padding="@dimen/add_paddng" />

        <TextView
            android:id="@+id/add_options_error_text"
            style="@style/ErrorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/add_paddng"
            android:textColor="@color/error_text_color"
            android:visibility="invisible" />
    </LinearLayout>

