<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.wandroid.answer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.wandroid.answer.AddActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:label="@string/title_activity_add"
            android:parentActivityName="net.wandroid.answer.EntryViewActivity" >
        </activity>

        <receiver
            android:name="net.wandroid.answer.sms.SmsBroadCastReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="net.wandroid.answer.EntryViewActivity"
            android:label="@string/title_activity_entry_view" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="net.wandroid.answer.providers.ReplyContentProvider"
            android:authorities="net.wandroid.answer.provider"
            android:exported="false" >
        </provider>

        <activity
            android:name="net.wandroid.answer.EditActivity"
            android:label="@string/title_activity_edit"
            android:parentActivityName="net.wandroid.answer.EntryViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.wandroid.answer.EntryViewActivity" />
        </activity>
    </application>

</manifest>