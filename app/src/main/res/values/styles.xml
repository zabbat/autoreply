<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
            

        -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->


    </style>

    <style name="BlueActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/main_color</item>
        <item name="android:titleTextStyle">@style/HoloTitleText</item>
    </style>

    <style name="HoloTitleText" parent="android:TextAppearance.Holo">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ErrorText" parent="android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/error_text_color</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="FlatButton" parent="android:style/Widget.DeviceDefault.Light.Button.Borderless.Small">
        <item name="android:background">@color/main_color</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FlatControllButton" parent="FlatButton">
        <item name="android:paddingStart">@dimen/controll_button_paddng_left_right</item>
        <item name="android:paddingEnd">@dimen/controll_button_paddng_left_right</item>
        <item name="android:background">@drawable/controll_button_selector</item>
    </style>


</resources>